package com.demo.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.demo.beans.Product;

public class ProductDaoImpl implements ProductDao {
	static Connection conn;
	static PreparedStatement insProd, insdisplay ,findById,updateById, deleteById;
	static {
		conn=DBUtil.getMyConnecton();
		try {
			insProd=conn.prepareStatement("insert into myproduct values(?,?,?,?,?)");
			insdisplay= conn.prepareStatement("select * from myproduct");
			findById=conn.prepareStatement("select * from myproduct where id=?");
			updateById=conn.prepareStatement("update myproduct set name=?,price=? where id= ?");
			deleteById= conn.prepareStatement("delete from myproduct where id=?");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	@Override
	public boolean save(Product p) {
		try {
			insProd.setInt(1, p.getPid());
			insProd.setString(2, p.getPname());
			insProd.setInt(3, p.getQty());
			insProd.setDouble(4, p.getPrice());
			insProd.setDate(5, java.sql.Date.valueOf(p.getLdt()));
			int n= insProd.executeUpdate();
			return n>0;
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return false;
	}
	@Override
	public List<Product> displayAll() {
		List<Product> llist = new ArrayList<>();
		try {
			ResultSet rs= insdisplay.executeQuery();
			while(rs.next()) {
			
				llist.add(new Product(rs.getInt(1), rs.getString(2),rs.getInt(3), rs.getDouble(4),rs.getDate(5).toLocalDate()));
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} 
		if(llist.size()>0) {
			return llist;
		}else {
			return null;
		}
	}
	@Override
	public Product findById(int id) {
		Product p=null;
		try {
			findById.setInt(1,id);
			ResultSet rs=findById.executeQuery();
			if(rs.next()) {
				p=new Product(rs.getInt(1),rs.getString(2),rs.getInt(3),rs.getDouble(4),rs.getDate(5).toLocalDate());
			}
		}
	catch(SQLException e) {
		e.printStackTrace();
	}
		return p;
	}
	@Override
	public boolean modifiedById(int id, String pname, Double price) {
		// TODO Auto-generated method stub
		try {
			updateById.setString(1,pname);
			updateById.setDouble(2, price);
			updateById.setInt(3, id);
			
			int n=updateById.executeUpdate();
			if(n>0)
				return true;
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return false;
	}
	@Override
	public boolean deleteById(int id) {
		try {
			deleteById.setInt(1, id);
			int n= deleteById.executeUpdate();
			if(n>0) {
				return true;
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return false;
	}
	
}
